<div id="roseengine_plugin_main" class="container-fluid">

    <div id="roseengine_inputs" class="row-fluid" style="width:100%;">

        <div id="rockarea" class="span6" style="height: 300px;"></div>
        <div id="pumparea" class="span6" style="height: 300px;"></div>
        <div id="rockstuff" class="span6">
            <div>
                <label for="rock_file_select">Select Rock Rosette:
                    <select id="rock_file_select">
                        <option value="">Loading...</option>
                    </select>
                </label>        
            </div>

            <div>
                <label title="RPM" data-toggle="tooltip" for="rpm">
                    RPM:
                    <input id="rpm" type="number" value="1" step="any" data-bind="value: rpm">
                </label>
            </div>
            
            <div>
                <label title="forward" data-toggle="tooltip" for="forward">
                    Spindle forward:
                    <input id="forward" type="checkbox" checked data-bind="checked: forward">
                </label>
            </div>

            <div>
                <label title="The percent step over at the largest diameter of the piece based on the input tool diameter." data-toggle="tooltip" for="amp">
                    Amplitude scale factor:
                    <input id="amp" type="number" value="0.5" max="5.0" step="any" data-bind="value: amp">
                </label>
            </div>
        </div>
        <div id="pumpstuff" class="span6">
             <div>
                <label for="pump_file_select">Select Pump Rosette:
                    <select id="pump_file_select">
                        <option value="">Loading...</option>
                    </select>
                </label>        
            </div>
        </div>
    </div>
<br>
    <div id="roseengine_actions" style="clear: both; margin-top: 20px;">
        <button id="start_job_button" class="btn btn-primary" data-bind="click: startjob">Start</button>
        <button id="stop_job_button" class="btn btn-primary" data-bind="click: stopjob">Stop</button>
        <button id="gotostart_button" class="btn btn-primary" data-bind="click: gotostart">Reset</button>
        <button id="control-zdown" class="btn box" style="border: 1px solid; width: 40px; height: 40px;" data-bind="click: function() {jog('down')}">
            <i class="fa fa-arrow-up"></i>
        </button>
        <button id="control-zup" class="btn box" style="border: 1px solid; width: 40px; height: 40px;" data-bind="click: function() {jog('up')}">
            <i class="fa fa-arrow-down"></i>
        </button>
        <button id="control-xdown" class="btn box" style="border: 1px solid; width: 40px; height: 40px;" data-bind="click: function() {jog('left')}">
            <i class="fa fa-arrow-left"></i>
        </button>
        <button id="control-xup" class="btn box" style="border: 1px solid; width: 40px; height: 40px;" data-bind="click: function() {jog('right')}">
            <i class="fa fa-arrow-right"></i>
        </button>
    </div>
</div>
